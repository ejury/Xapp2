<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:gradient="clr-namespace:Syncfusion.XForms.Graphics;assembly=Syncfusion.Core.XForms"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms" xmlns:chart="clr-namespace:Syncfusion.SfChart.XForms;assembly=Syncfusion.SfChart.XForms"
             mc:Ignorable="d"
             x:Class="Xapp2.Pages.WorkerEntryPage"
             >

    <ContentPage.Resources>
        <ResourceDictionary>
            <chart:ChartColorCollection x:Key="Colors">
                <Color>#1c8af0</Color>
                <Color>#2c0051</Color>
                <Color>#1cbcdf</Color>
                <Color>#6e28b8</Color>
                <Color>#1cdfc6</Color>
                <Color>#282bb8</Color>
                <Color>#adf0a3</Color>
                <Color>#e8e5fd</Color>

            </chart:ChartColorCollection>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout  Style="{StaticResource pageStyle}" BackgroundColor="#e0e9f2">
            <!-- Top Header Details -->
            <Grid
                BackgroundColor="#000000" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0"   Source="SEWhite.jpg"   HorizontalOptions="Center"   VerticalOptions="Center"  Margin="3" />
                <Label Grid.Column="1"   Style="{StaticResource labletitlestyle}"  Text="Worker Entry"  TextColor="White"  />
                <ImageButton Grid.Column="2" Source="HomeButton.png" Margin="5"  BackgroundColor="Transparent"  Clicked = "OnMainNavClicked" />
            </Grid>
            <!-- Top Header Ends -->

            <!-- User Entry Section -->
            <Frame CornerRadius="10" HorizontalOptions="Center"  VerticalOptions="Start" Margin="16,8" BackgroundColor="#ffffff" HasShadow="True"
           IsClippedToBounds="True"  Padding="0">
                <Grid RowSpacing="0" Margin="5,0,5,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Top header of user entry -->
                    <Label Text=" &#xe723; Add"  Margin="0,0,0,-5" Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="3" HorizontalOptions="Start"
                       Style="{StaticResource lablebodystyle}" FontAttributes="bold" FontFamily="{StaticResource FontIcons}" TextColor="#0f2696"/>
                    <BoxView Grid.Row="1" Grid.ColumnSpan="3" HorizontalOptions="FillAndExpand" HeightRequest="1" Color="#0f2696" Margin="10,0,10,0"/>
                    
                    <!-- temp entry for SEcard Number -->
                    <Entry x:Name="TempSECardEntry" Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="3" HorizontalOptions="End" WidthRequest="50" Margin="0,0,0,-7" FontSize="10"/>

                    <!-- User Entry Data Section -->
                    <Label Text="Name:" Margin="0,0,0,-7" Grid.Row="2" Grid.Column="0"  Style="{StaticResource lablebodystyle}"  HorizontalOptions="Start" />
                    <Label Text="Company:" Margin="0,0,0,-7" Grid.Row="3" Grid.Column="0"  Style="{StaticResource lablebodystyle}"  HorizontalOptions="Start"/>
                    <Entry x:Name ="FirstNameText" Margin="0,0,0,-7" Grid.Row="2" Grid.Column="1" Style="{StaticResource entrystyle}"  Placeholder="First"/>
                    <Entry x:Name ="LastNameText" Margin="0,0,0,-7" Grid.Row="2" Grid.Column="2" Style="{StaticResource entrystyle}"  Placeholder="Surname"/>
                    <Picker x:Name="companypicker" Margin="0,0,0,-7" Grid.Row="3" Grid.Column="1" Style="{StaticResource pickerstyle}"  Title="Existing"  SelectedIndexChanged="OnPickerSelectedIndexChanged"/>
                    <Entry x:Name ="CompanyNameText" Margin="0,0,0,-7" Grid.Row="3" Grid.Column="2"  Style="{StaticResource entrystyle}"  Placeholder="Create New"   />

                    <buttons:SfButton
                            Grid.Row="4" Grid.ColumnSpan="3"  Margin="20,10,20,10"  BackgroundColor="{DynamicResource FacebookBlue}"  CornerRadius="20" HeightRequest="40"  Clicked = "NewWorkerClicked">
                        <buttons:SfButton.Content>
                            <StackLayout   HorizontalOptions="CenterAndExpand"  Orientation="Horizontal"     VerticalOptions="Center">
                                <Label  FontFamily="{StaticResource FontIcons}" FontSize="18" Text="&#xe746;" TextColor="{DynamicResource Gray-White}" VerticalTextAlignment="Center" />
                                <Label  FontFamily="{StaticResource Montserrat-Medium}"  FontSize="16" Text="Add With SE Badge"  TextColor="{DynamicResource Gray-White}" />
                            </StackLayout>
                        </buttons:SfButton.Content>
                    </buttons:SfButton>
                </Grid>
            </Frame>


            <!-- Middle Label -->
            <Grid BackgroundColor="Black">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <!-- Left Symbol For Users Display -->
                <Label x:Name="LView1" Grid.Row="0" Text=" &#xe723;"  Margin="10,0,10,0" HorizontalOptions="Start" FontSize="25"
                       Style="{StaticResource lablebodystyle}"  FontAttributes="bold" FontFamily="{StaticResource FontIcons}" TextColor="Aqua"/>

                <!-- Right Button For Users Display -->
                <Label x:Name="RView1" Grid.Row="0" Text=" &#xe723; &#xe723;"  Margin="0,0,0,-8" HorizontalOptions="End"
                       Style="{StaticResource lablebodystyle}" FontAttributes="bold" FontFamily="{StaticResource FontIcons}" TextColor="#ffffff"/>
                <Label x:Name="RView2" Grid.Row="0" Text=" &#xe723;"  Margin="10,0,10,5" HorizontalOptions="End"
                       Style="{StaticResource lablebodystyle}" FontAttributes="bold" FontFamily="{StaticResource FontIcons}" TextColor="#ffffff"/>
                <!-- Main Label -->
                <Label Grid.Row="0" Text="Users Summary" TextColor="White"  Style="{StaticResource labletitlestyle}"  FontSize="Large" VerticalTextAlignment="Center"/>
                <Button x:Name="LButton" Grid.Row="0" BorderColor="Aqua" BorderWidth="0" HeightRequest="40" WidthRequest="60" BackgroundColor="Transparent" Clicked="ListViewChange"/>
            </Grid>

            <!--Data Display Section   -->
            <Grid Margin="0" Padding="0" RowSpacing="0" VerticalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="LDisplay" Width="*" />
                    <ColumnDefinition x:Name="RDisplay" Width="0" />
                </Grid.ColumnDefinitions>

                <!-- Adding Worklist List Display-->
                <Frame Grid.Column="1" CornerRadius="10" HorizontalOptions="Fill"  VerticalOptions="Fill" Margin="8,8,16,8" BackgroundColor="#ffffff"
                   HasShadow="True" IsClippedToBounds="True" Padding="0">

                    <Grid RowSpacing="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--Adding Worker List Display   -->
                        <Button x:Name="companylabelname" Grid.Row="0" Text="temp" HorizontalOptions="Fill"   FontAttributes="Bold"
                                BorderWidth="0" Padding="0" FontSize="20" TextColor="Black" BackgroundColor="#FFFFFF" Margin="0,0,0,0"/>

                        <BoxView Grid.Row="1" HorizontalOptions="FillAndExpand" HeightRequest="1" Color="#0f2696" Margin="10,0,10,0"/>

                        <Grid Grid.Row="2" Margin="15,0,15,0" RowSpacing="-5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition x:Name="XAMLdatelist" Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="First:" TextColor="Black"  FontSize="Body" FontAttributes="Bold" HorizontalTextAlignment="start"/>
                            <Label Grid.Column="1" Text="Last:" TextColor="Black"  FontSize="Body" FontAttributes="Bold" HorizontalTextAlignment="start"/>
                            <Label Grid.Column="2" Text="Created:" TextColor="Black"  FontSize="Body" FontAttributes="Bold" HorizontalTextAlignment="start"/>
                        </Grid>
                        <!-- View with no date -->
                        <ListView Grid.Row="3" x:Name="workersview" SeparatorVisibility="Default" RowHeight="22" Margin="5,0,5,0" IsVisible="true"
                              Style="{StaticResource listviewstyle}" BackgroundColor="Transparent" VerticalOptions="Fill"  ItemSelected="WorkerSelected">

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Grid Margin="10,0,10,0" RowSpacing="-5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1.5*" />
                                                <ColumnDefinition Width="1.5*" />
                                                <ColumnDefinition  Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Left column - First Name of Worker  -->
                                            <Label Grid.Column="0" TextColor="Black"  FontSize="Body" HorizontalTextAlignment="start" Text="{Binding FirstName}"/>

                                            <!-- Middle column - Last Name of Worker -->
                                            <Label Grid.Column="1"   TextColor="Black"  FontSize="Body" HorizontalTextAlignment="start"  Text="{Binding LastName}"/>

                                            <!-- Middle column - Last Name of Worker -->
                                            <Label x:Name="datelist" Grid.Column="2"   TextColor="Black"  FontSize="Body" HorizontalTextAlignment="center"  Text="{Binding CreatedTime}"/>

                                        </Grid>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <!-- View with date -->
                        <ListView Grid.Row="3" x:Name="workersview2" SeparatorVisibility="Default" RowHeight="22" Margin="5,0,5,0" IsVisible="false"
                              Style="{StaticResource listviewstyle}" BackgroundColor="Transparent" VerticalOptions="Fill"  ItemSelected="WorkerSelected">

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Grid Margin="10,0,10,0" RowSpacing="-5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1.5*" />
                                                <ColumnDefinition Width="1.5*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Left column - First Name of Worker  -->
                                            <Label Grid.Column="0" TextColor="Black"  FontSize="Body" HorizontalTextAlignment="start" Text="{Binding FirstName}"/>

                                            <!-- Middle column - Last Name of Worker -->
                                            <Label Grid.Column="1"   TextColor="Black"  FontSize="Body" HorizontalTextAlignment="start"  Text="{Binding LastName}"/>
                                        </Grid>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Frame>

                <!-- Adding Doughnut Chart Display-->
                <Frame Grid.Column="0" CornerRadius="10" HorizontalOptions="Center"  VerticalOptions="FillAndExpand" Margin="16,8,8,8" BackgroundColor="#ffffff"
                   HasShadow="True" IsClippedToBounds="True" Padding="0">

                    <Grid RowSpacing="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Pieview chart Header -->
                        <Label  Grid.Row="0" Text="User Group(s)" HorizontalOptions="Fill" FontAttributes="Bold"   HorizontalTextAlignment="center"
                                 Margin="0" Padding="0" FontSize="20" TextColor="Black" BackgroundColor="#ffffff" />
                        <BoxView Grid.Row="1" HorizontalOptions="FillAndExpand" HeightRequest="1" Color="#0f2696" Margin="10,0,10,0"/>

                        <!--Adding Pie Chart Display   -->
                        <chart:SfChart   Grid.Row="2" BackgroundColor="Transparent" Margin="0,0,0,0" VerticalOptions="Fill">
                            <chart:SfChart.Legend>
                                <chart:ChartLegend OverflowMode="Wrap">
                                    <chart:ChartLegend.LabelStyle>
                                        <chart:ChartLegendLabelStyle TextColor="#020a45" Font="Bold" />
                                    </chart:ChartLegend.LabelStyle>
                                </chart:ChartLegend>
                            </chart:SfChart.Legend>

                            <chart:DoughnutSeries  x:Name="doughnut" ExplodeIndex="{Binding doughnutselect, Mode=OneWay}" ItemsSource="{Binding doughnutmodel}" YBindingPath="Workercount" XBindingPath="Companyname" 
                                          ExplodeOnTouch="True" PropertyChanged="PieChanged"  DataMarkerPosition="Inside" CircularCoefficient="0.9" DoughnutCoefficient="0.4">

                                <chart:DoughnutSeries.ColorModel>
                                    <chart:ChartColorModel Palette="Custom" CustomBrushes="{StaticResource Colors}" />
                                </chart:DoughnutSeries.ColorModel>
                                <chart:DoughnutSeries.DataMarker>
                                    <chart:ChartDataMarker>
                                        <chart:ChartDataMarker.LabelStyle>
                                            <chart:DataMarkerLabelStyle TextColor="#020a45" BorderColor="Black"  BorderThickness="2" BackgroundColor="#ffffff" Font="Bold,16"/>
                                        </chart:ChartDataMarker.LabelStyle>
                                    </chart:ChartDataMarker>
                                </chart:DoughnutSeries.DataMarker>
                            </chart:DoughnutSeries>
                        </chart:SfChart>
                    </Grid>
                </Frame>
            </Grid>

            <!-- Nav Bar Display-->
            <Grid x:Name="NavBarGrid"  BackgroundColor="#ffffff">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Nav Bar Selections-->
                <ImageButton x:Name="CSEButton" Grid.Row="0"  Grid.Column="0"   Style="{StaticResource NavImageCSE}"
                    Clicked = "OnCSEManagerClicked"/>
                <ImageButton x:Name="StatusButton" Grid.Row="0"  Grid.Column="1"   Style="{StaticResource NavImageStatus}"
                    Clicked = "OnSiteStatusButtonClicked" />
                <ImageButton x:Name="HeirarchyButton" Grid.Row="0"  Grid.Column="2"   Style="{StaticResource NavImageHeirarchy}"
                    Clicked = "OnVesselButtonClicked" />
                <ImageButton x:Name="WorkerButton" Grid.Row="0"  Grid.Column="3"   Style="{StaticResource NavImageWorker}"
                    Clicked = "OnWorkerButtonClicked" />
                <ImageButton x:Name="AnalyticsButton" Grid.Row="0"  Grid.Column="4"   Style="{StaticResource NavImageAnalytics}"
                    Clicked = "OnAnalyticsButtonClicked" />
            </Grid>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>